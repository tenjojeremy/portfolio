{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Jeremy Tenjo | Portfolio",
  "scripts": {
    "start": "wapp start",
    "build": "wapp build",
    "build:analyze": "wapp build && wapp analyze",
    "docs": "wapp docs",
    "deploy:dev": "wapp build && firebase use development && firebase deploy --only hosting ",
    "deploy:prod": "npm run lint:fix && npm run prettify && wapp build && gpush &&  && firebase use default && firebase deploy",
    "start:functions": "firebase serve --only functions",
    "prettify": "prettier \"**/*.js\" --write",
    "check-staged": "lint-staged",
    "lint:fix": "eslint ./src --fix",
    "lint:check": "eslint ./src"
  },
  "dependencies": {
    "@tenjojeremy/eslint-config": "^3.1.0",
    "@tenjojeremy/prettier-config": "^0.5.0",
    "@tenjojeremy/wapp": "^1.24.0",
    "@tenjojeremy/web-toolkit": "^6.55.0",
    "firebase": "^7.8.1",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.12.19",
    "styled-components": "^5.0.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint:fix",
      "npm run prettify",
      "prettier --list-different"
    ]
  },
  "prettier": "@tenjojeremy/prettier-config",
  "eslintConfig": {
    "extends": "@tenjojeremy/eslint-config"
  },
  "eslintIgnore": [
    "/build/*",
    "/src/serviceWorker/sw.js",
    "/node_modules",
    "/api/node_modules"
  ]
}
